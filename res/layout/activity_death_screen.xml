<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ghosthunter.DeathScreen" 
    android:background="@drawable/splashimage">

    <TextView
         android:id="@+id/deathScreenText"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="35dp"
         android:gravity="center"
         android:maxLines="4"
         android:shadowColor="#000000"
         android:shadowDx="4"
         android:shadowDy="4"
         android:shadowRadius="5"
         android:singleLine="false"
         android:text="You Died"
         android:textColor="#FFFFFF"
         android:textSize="100sp"
         android:textStyle="bold" 
         android:typeface="serif"/>
    


    <Button
        android:id="@+id/backToMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/deathScreenText"
        android:layout_below="@+id/deathScreenText"
        android:layout_marginRight="34dp"
        android:layout_marginTop="130dp"
        android:gravity="right"
        android:text="Menu"
        android:textSize="50sp" />

    <Button
        android:id="@+id/backToGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/backToMenuButton"
        android:layout_alignBottom="@+id/backToMenuButton"
        android:layout_alignLeft="@+id/deathScreenText"
        android:layout_marginLeft="43dp"
        android:gravity="left"
        android:text="Restart"
        android:textSize="50sp" />

    <Button
        android:id="@+id/backToHighScoresButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backToMenuButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:gravity="center"
        android:text="High Scores"
        android:textSize="50sp" />
    
</RelativeLayout>
