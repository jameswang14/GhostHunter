<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashimage"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ghosthunter.Launcher" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/line1"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="italic" 
        android:shadowDx="-5"
        android:shadowDy="5"
        android:shadowRadius="2"/>

    <ImageView
        android:id="@+id/imagelogo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginBottom="44dp"
        android:contentDescription="@string/description"
        android:src="@drawable/titlefontnewer"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:gravity="center"
        android:text="@string/line2"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="italic" 
        android:shadowColor="#000000"
        android:shadowDx="-5"
        android:shadowDy="5"
        android:shadowRadius="2"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:gravity="center"
        android:text="@string/line3"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="italic" 
        android:shadowDx="-5"
        android:shadowDy="5"
        android:shadowRadius="2"/>

     <TextView
         android:id="@+id/textView4"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/textView3"
         android:layout_below="@+id/textView3"
         android:gravity="center"
         android:text="@string/line4"
         android:textColor="#ffffff"
         android:textSize="20sp"
         android:textStyle="italic" 
         android:shadowDx="-5"
        android:shadowDy="5"
        android:shadowRadius="2"/>
    
</RelativeLayout>