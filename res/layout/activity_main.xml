<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashimage"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ghosthunter.MainActivity" >

    <ImageView
        android:id="@+id/imagelogo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startGameButton"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/description"
        android:gravity="center"
        android:src="@drawable/titlefontnewer" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startGameButton"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/settings"
        android:textSize="35sp"
        android:textStyle="bold" />
    
    <Button
        android:id="@+id/startGameButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settingsButton"
        android:layout_alignLeft="@+id/imagelogo"
        android:gravity="center"
        android:text="@string/startgame"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/highscoresButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/settingsButton"
        android:layout_below="@+id/settingsButton"
        android:gravity="center"
        android:text="High Scores"
        android:textSize="35sp"
        android:textStyle="bold" />

</RelativeLayout>